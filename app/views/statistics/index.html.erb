<div class="row">
	<div class="col-md-9 col-md-offset-3 main">
		<h1 class="text-center"><%= @header_title %> </h1>
		<div class="table-responsive">
			<table id="data" class="table table-stripped">
				<tr>
					<th>Date</th>
					<th>Affiliate</th>
					<th>Count</th>
				</tr>
				<% @statistics.each do |s| %>
					<% a = Affiliate.find_by_id(s.affiliate_id) %>
					<% next if a.is_deleted || s.count == 0 %>
					<tr>
						<td><%= s.date %> </td>
						<td><%= a.name %> </td>
						<td><%= s.count %> </td>
					</tr>
				<% end %>
			</table>
		</div>
		<p class="text-right">Total number of installations: <%= @installations.count %> </p>
		<p class="text-right">Total number of translated URL: <%= @translate_count %> </p>
	</div>
</div>
