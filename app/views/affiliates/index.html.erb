<div class="row">
	<div class="col-md-9 col-md-offset-3 main">
		<div class="table-responsive">
			<table id="data" class="table table-stripped">
				<tr>
					<th>Name</th>
					<th>Company</th>
					<th>Active</th>
					<th></th>
					<th></th>
				</tr>
				<% @affiliates.each do |a| %>
					<tr data-link="<%= edit_affiliate_path(a) %>">
						<td><%= a.name %> </td>
						<td><%= a.company.name %> </td>
						<td><%= a.is_enabled  %> </td>
						<td><%= button_to "Edit", edit_affiliate_path(a), :method => :get, :class => "btn btn-default" %> </td>
						<td><%= button_to "Delete", affiliate_path(a), :method => :delete, :class => "btn btn-default" %> </td>
					</tr>
				<% end %>
			</table>
			<%= button_to "Add", new_affiliate_path, :method => :get, :class => "btn btn-primary custom pull-right" %> 
		</div>
	</div>
</div>