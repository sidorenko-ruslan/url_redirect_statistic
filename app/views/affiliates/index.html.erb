<div class="row">
	<div class="col-md-9 col-md-offset-3 main">
		<h1 class="text-center">Affiliates</h1>
		<div class="table-responsive">
			<table id="data" class="table table-stripped">
				<tr>
					<th>Name</th>
					<th>Company</th>
					<th>Active</th>
					<th></th>
					<th></th>
				</tr>
				<% @affiliates.each do |a| %>
					<tr data-link="<%= edit_affiliate_path(a) %>">
						<td><%= a.name %> </td>
						<td><%= a.company.name %> </td>
						<td><%= a.is_enabled  %> </td>
						<td><%= button_to "Edit", edit_affiliate_path(a), :method => :get, :class => "btn btn-default" %> </td>
						<td><%= button_to "Delete", affiliate_path(a), :method => :delete, :class => "btn btn-default", data: { :confirm => "Are you sure?" } %> </td>
					</tr>
				<% end %>
			</table>
			<%= button_to "Add", new_affiliate_path, :method => :get, :class => "btn btn-primary custom pull-right" %> 
			<div class="btn group">
				<%= link_to "Disable All", {:controller => "users", :action => "toggle", :command => "disable"}, :class => "btn btn-danger custom", :role => "button" %>
				<%= link_to "Enable All", {:controller => "users", :action => "toggle", :command => "enable"}, :class => "btn btn-success custom", :role=> "button" %>
			</div>
		</div>
	</div>
</div>