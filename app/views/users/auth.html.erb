<div class="container">
	<%= form_for @user, url: { action: "check" }, html: { class: "form-signin" }  do |f| %>
<p> Name:</br> <%= f.text_field( :login, class: "form-control") %> </p>
<p> Password:</br> <%= f.password_field(:password, class: "form-control") %> </p>
<p> <%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %> </p>
<% end %>
</div>

